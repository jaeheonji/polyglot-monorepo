{
  "compilerOptions": {
    /** Basic Options */
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    /** Strict Type-Checking Options */
    "strict": true,
    "allowJs": false,
    /** Module Resolution Options */
    "moduleResolution": "node",
    /** Advanced Options */
    "skipLibCheck": true,
    "removeComments": false,
    /** Path Map Options */
    "baseUrl": "./",
    "paths": {
      "@polyglot-monorepo/*": [
        "../../../packages/*"
      ]
    }
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./**/*.spec.ts"
  ]
}
